<?xml version="1.0" ?>
<sdf version="1.6">
  <!-- Raspbot V2-like: 4 mecanum wheels + camera + ultrasonic -->
  <model name="raspbot" xmlns:ignition="http://ignitionrobotics.org/schema">
    <!-- Spawn pose is handled by ros_gz_sim create (-x/-y/-z) -->

    <link name="chassis">
      <pose>0 0 0.04 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.03</iyy><iyz>0</iyz>
          <izz>0.04</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <box><size>0.32 0.22 0.08</size></box>
        </geometry>
        <material>
          <ambient>0.7 0.7 0.7 1</ambient>
          <diffuse>0.7 0.7 0.7 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <box><size>0.32 0.22 0.08</size></box>
        </geometry>
      </collision>

      <!-- Ultrasonic-like range sensor (ray with 1 sample -> LaserScan topic: /raspbot/ultrasonic) -->
      <sensor name="ultrasonic" type="ray">
        <pose>0.16 0 0.08 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>1</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.02</min>
            <max>4.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
        <always_on>1</always_on>
        <update_rate>20</update_rate>
        <visualize>true</visualize>
        <topic>/raspbot/ultrasonic</topic>
      </sensor>
    </link>

    <!-- Camera mount (visual like Raspbot v2 PTZ; joints are static by default) -->
    <link name="camera_pan">
      <pose>0 0 0 0 0 0</pose>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry><cylinder><radius>0.02</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.2 0.2 0.2 1</ambient><diffuse>0.2 0.2 0.2 1</diffuse></material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.02</radius><length>0.02</length></cylinder></geometry>
      </collision>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>1e-5</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>1e-5</iyy><iyz>0</iyz>
          <izz>1e-5</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="camera_pan_joint" type="revolute">
      <parent>chassis</parent>
      <child>camera_pan</child>
      <!-- mount position (front-top of chassis) -->
      <pose>0.14 0 0.12 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit><lower>-1.57</lower><upper>1.57</upper></limit>
      </axis>
    </joint>

    <link name="camera_tilt">
      <pose>0 0 0 0 0 0</pose>
      <visual name="visual">
        <geometry><box><size>0.02 0.04 0.03</size></box></geometry>
        <material><ambient>0.2 0.2 0.2 1</ambient><diffuse>0.2 0.2 0.2 1</diffuse></material>
      </visual>
      <collision name="collision">
        <geometry><box><size>0.02 0.04 0.03</size></box></geometry>
      </collision>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>1e-5</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>1e-5</iyy><iyz>0</iyz>
          <izz>1e-5</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="camera_tilt_joint" type="revolute">
      <parent>camera_pan</parent>
      <child>camera_tilt</child>
      <pose>0.02 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-0.78</lower><upper>0.78</upper></limit>
      </axis>
    </joint>

    <link name="camera_body">
      <pose>0 0 0 0 0 0</pose>
      <visual name="visual">
        <geometry><box><size>0.06 0.03 0.03</size></box></geometry>
        <material><ambient>0.05 0.05 0.05 1</ambient><diffuse>0.05 0.05 0.05 1</diffuse></material>
      </visual>
      <collision name="collision">
        <geometry><box><size>0.06 0.03 0.03</size></box></geometry>
      </collision>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>2e-5</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>2e-5</iyy><iyz>0</iyz>
          <izz>2e-5</izz>
        </inertia>
      </inertial>

      <!-- Forward camera (simulated image topic: /raspbot/camera and /raspbot/camera/camera_info) -->
      <sensor name="camera" type="camera">
        <pose>0.03 0 0 0 0 0</pose>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.05</near>
            <far>20.0</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>/raspbot/camera</topic>
      </sensor>
    </link>

    <joint name="camera_body_joint" type="fixed">
      <parent>camera_tilt</parent>
      <child>camera_body</child>
      <pose>0.03 0 0 0 0 0</pose>
    </joint>

    <!-- Mecanum wheels: use diagonal friction directions (from ignition example) -->
    <link name="front_left_wheel">
      <pose>0.11 0.09 0.05 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0002</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.0002</iyy><iyz>0</iyz>
          <izz>0.0002</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient><diffuse>0.1 0.1 0.1 1</diffuse></material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
              <fdir1 ignition:expressed_in="chassis">1 -1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <link name="rear_left_wheel">
      <pose>-0.11 0.09 0.05 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0002</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.0002</iyy><iyz>0</iyz>
          <izz>0.0002</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient><diffuse>0.1 0.1 0.1 1</diffuse></material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
              <fdir1 ignition:expressed_in="chassis">1 1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <link name="front_right_wheel">
      <pose>0.11 -0.09 0.05 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0002</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.0002</iyy><iyz>0</iyz>
          <izz>0.0002</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient><diffuse>0.1 0.1 0.1 1</diffuse></material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
              <fdir1 ignition:expressed_in="chassis">1 1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <link name="rear_right_wheel">
      <pose>-0.11 -0.09 0.05 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0002</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.0002</iyy><iyz>0</iyz>
          <izz>0.0002</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient><diffuse>0.1 0.1 0.1 1</diffuse></material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
              <fdir1 ignition:expressed_in="chassis">1 -1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1.79769e+308</lower><upper>1.79769e+308</upper></limit>
      </axis>
    </joint>
    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1.79769e+308</lower><upper>1.79769e+308</upper></limit>
      </axis>
    </joint>
    <joint name="front_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1.79769e+308</lower><upper>1.79769e+308</upper></limit>
      </axis>
    </joint>
    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1.79769e+308</lower><upper>1.79769e+308</upper></limit>
      </axis>
    </joint>

    <!-- Mecanum drive plugin (command topic: /model/raspbot/cmd_vel) -->
    <plugin filename="ignition-gazebo-mecanum-drive-system" name="ignition::gazebo::systems::MecanumDrive">
      <front_left_joint>front_left_wheel_joint</front_left_joint>
      <front_right_joint>front_right_wheel_joint</front_right_joint>
      <back_left_joint>rear_left_wheel_joint</back_left_joint>
      <back_right_joint>rear_right_wheel_joint</back_right_joint>
      <wheel_separation>0.18</wheel_separation>
      <wheelbase>0.22</wheelbase>
      <wheel_radius>0.05</wheel_radius>
      <min_acceleration>-5</min_acceleration>
      <max_acceleration>5</max_acceleration>
    </plugin>
  </model>
</sdf>

